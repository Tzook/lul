{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "pretty": true,
    "outDir": "output"
  },
  "compileOnSave": false,
  "exclude": [
    "tests",
    "gulpfile.js",
    "node_modules",
    "output",
    "playground"
  ]
}